<% provide(:title , "home") %>

	<table class="table table-hover table-borderless">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th><%= post.id %></th>
      <td><%= post.title %></td>
      <td><%= post.summary %></td>
      <td><%= post.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<button type="button" class="btn btn-success"> <%=link_to("New Post", new_post_path , class: "new") %> </button>
